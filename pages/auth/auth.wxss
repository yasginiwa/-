/* pages/auth/auth.wxss */

page {
  background-color: #ededed;
}

.noclient image {
  position: absolute;
  width: 150rpx;
  height: 150rpx;
  left: 40%;
  top: 35%;
}

.noclient text {
  font-size: 30rpx;
  position: absolute;
  color: #bfbfbf;
  left: 42%;
  top: 49%;
}

.cell {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  background-color: white;
  height: 120rpx;
  width: 100%;
  margin-bottom: 10rpx;
  transition: left 0.2s ease-in-out;
  white-space: nowrap;
  overflow: hidden;
  z-index: 3;
  position: relative;
}

.cell .icon {
  width: 70rpx;
  height: 70rpx;
  margin-left: 10rpx;
}

.cell .content {
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.cell .content .company {
  font-size: 28rpx;
  margin-bottom: 5rpx;
}

.cell image {
  width: 24rpx;
  height: 24rpx;
}

.cell .detail {
  display: flex;
  flex-flow: row nowrap;
  font-size: 24rpx;
  margin-top: 5rpx;
  margin-left: 10rpx;
}

.cell text {
  margin-left: 10rpx;
}

.cell .detail .contact {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.cell .detail .contact text {
  color: #aaa;
}

.cell .detail .phone {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}

.cell .detail .phone text {
  color: #aaa;
}

.cell .detail .ticketnumber {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}

.cell .detail .ticketnumber text {
  color: #aaa;
}

.cell .count {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 30rpx;
  width: 120rpx;
  position: absolute;
  right: 110rpx;
}

.number {
  display: flex;
  align-items: center;
  text-align: center;
  height: 30rpx;
  width: 50rpx;
  font-size: 22rpx;
}

.count .minus {
  width: 30rpx;
  height: 30rpx;
}

.count .plus {
  width: 30rpx;
  height: 30rpx;
}

.cell .auth {
  position: absolute;
  right: 10rpx;
  width: 80rpx;
  height: 80rpx;
}

.slider {
  position: relative;
  overflow: hidden;
  width: 100%;
}

.slider .del {
  position: absolute;
  background-color: #e64340;
  width: 180rpx;
  text-align: center;
  z-index: 2;
  right: 0rpx;
  color: white;
  height: 120rpx;
  font-size: 32rpx;
  line-height: 120rpx;
  font-weight: bold; 
  top:0rpx;
}
