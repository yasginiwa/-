/* pages/verify/verify.wxss */
.top {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 96%;
  height: 80rpx;
  margin-left: 2%;
  border: solid 2rpx lightgray;
}

.top image {
  width: 60rpx;
  height: 60rpx;
  margin-left: 10rpx;
}

.top text {
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 10rpx;
}

.order_process {
  margin-top: 50rpx;
  display: flex;
  flex-wrap: nowrap;
  padding: 10rpx 10rpx 20rpx 10rpx;
  background-color: #fff;
}

.process_wrap {
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
}

.process {
  display: flex;
  align-items: center;
  width: 100%;
  margin-top:5px;
}

.process_icon {
  width: 50rpx;
  height: 50rpx;
}

.process_line {
  background: #aaa;
  flex: 1;
  height: 5rpx;
}

.process_name {
  font-size: 24rpx;
}