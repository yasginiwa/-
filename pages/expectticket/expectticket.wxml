<!--pages/expectticket/expectticket.wxml-->
<image class='banner' src='../../assets/expectbanner.png'></image>

<view class='count'>
  <image class='minus' src='../../assets/minus.png' bindtap='onMinus'></image>
  <view class='number'>
    <input type='number' maxlength='3' bindinput='onCountInput' placeholder='0' value='{{expectnumbers}}'></input>
  </view>
  <image class='plus' src='../../assets/plus.png' bindtap='onPlus'></image>
</view>
<button class='add' bindtap='expectticket' disabled='{{!expectBtnStatus}}'>申领卡券</button>
