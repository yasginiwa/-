/* pages/expectticket/expectticket.wxss */

page {
  background-color: white;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
}

.banner {
  margin-top: 60rpx;
  width: 250rpx;
  height: 250rpx;
}

.desc {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  margin-top: 40rpx;
}

.desc .title {
  font-size: 40rpx;
}

.waiting {
  margin-top: 40rpx;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  width: 100%;
}

.waiting .desc {
  margin-top: 20rpx;
  display: flex;
  flex-flow: row nowrap;
  color: #aaa;
  align-items: center;
}

.waiting .content {
  margin-top: 60rpx;
  display: flex;
  flex-flow: column nowrap;
  color: #aaa;
  /* margin-left: 40rpx; */
  font-size: 28rpx;
}

.waiting .desc text {
  font-size: 30rpx;
  margin-left: 20rpx;
}

.waiting image {
  width: 40rpx;
  height: 40rpx;
}

.desc .content {
  color: #aaa;
  font-size: 30rpx;
  margin-top: 10rpx;
  width: 520rpx;
}

.expectcontent {
  margin-top: 20rpx;
  width: 520rpx;
  font-size: 30rpx;

}

.expectcontent .cover {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
}

.expectcontent .cover image{
  width: 400rpx;
  height: 200rpx;
}

.expectcontent .cover .right {
  display: flex;
  flex-flow: column nowrap;
}

.expectcontent .cover .right text {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #aaa;
}

.expectcontent .cover .right button {
  margin-top: 10rpx;
  width: 120rpx;
  height: 50rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.expectcontent .ticketcounts {
  margin-top: 50rpx;
  border-bottom: solid #aaa 1rpx;
  margin-bottom: 40rpx;
  text-align: center;
  position: relative;
}

.expectcontent .ticketcounts text {
  color: #aaa;
  position: absolute;
  right: 0;
  top: 0rpx;
  font-size: 28rpx
}

.phstyle {
  font-size: 28rpx;
  text-align: center;
  color: #aaa;
}

.add {
  margin-top: 50rpx;
  width: 500rpx;
  background-color: #0079c0;
  color: white;
}

.sec-cover{
  position: absolute;
  left: -1000px;
  top: 0;
  width: 500px;
  height: 249px;
}
