/* pages/expectticket/expectticket.wxss */

page {
  background-color: white;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
}

.banner {
  margin-top: 60rpx;
  width: 250rpx;
  height: 250rpx;
}

.desc {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  margin-top: 60rpx;
}

.desc .title {
  font-size: 40rpx;
}

.desc .content {
  color: #aaa;
  font-size: 30rpx;
  margin-top: 10rpx;
}

.expectcontent {
  margin-top: 40rpx;
  width: 500rpx;
  font-size: 34rpx;
}

.expectcontent .ticketname {
  border-bottom: solid #aaa 1rpx;
  margin-bottom: 40rpx;
  text-align: center;
}


.expectcontent .ticketprice {
  border-bottom: solid #aaa 1rpx;
  margin-bottom: 36rpx;
  text-align: center;
  position: relative;
}

.expectcontent .ticketprice text {
  color: #aaa;
  position: absolute;
  right: 0;
  top: -3rpx;
}

.expectcontent .ticketcounts {
  border-bottom: solid #aaa 1rpx;
  margin-bottom: 40rpx;
  text-align: center;
  position: relative;
}

.expectcontent .ticketcounts text {
  color: #aaa;
  position: absolute;
  right: 0;
  top: -3rpx;
}

.phstyle {
  font-size: 34rpx;
  text-align: center;
}

.add {
  margin-top: 40rpx;
  width: 500rpx;
  background-color: #0079c0;
  color: white;
}
