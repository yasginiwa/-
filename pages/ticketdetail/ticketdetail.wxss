/* pages/ticketdetail/ticketdetail.wxss */

page {
  background-color: #0079c0;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}

.section-top {
  background-color: white;
  width: 90%;
  height: 70%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  border-bottom: solid #888 1rpx;
}

.section-top .name {
  margin-top: 30rpx;
}

.section-top .hint {
  margin-top: 10rpx;
  color: #aaa;
  font-size: 30rpx;
}

.section-top .barcode {
  display: flex;
  height: 320rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}

.section-top .barnum {
  width: 670rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 38rpx;
  font-weight: bold;
  text-align: center;
  letter-spacing: 10rpx;
  white-space: nowrap;
}

.section-top .desc {
  color: #f26700;
  font-size: 40rpx;
  margin-bottom: 30rpx;
}

.barcode > canvas {
  width: 640rpx;
  height: 200rpx;
}

.section-middle {
  width: 90%;
  height: 70%;
  background-color: white;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  background: radial-gradient(30rpx at left bottom, transparent 50%, white 50%);
}

.section-middle text {
  font-size: 30rpx;
  color: #aaa;
  margin-top: 10rpx;
  margin-left: 30rpx;
}

.section-middle .customername {
  margin-top: 30rpx;
}

.section-middle .validdate {
  margin-bottom: 30rpx;
}

.section-bottom {
  backdrop-filter: white;
  width: 90%;
  height: 10%;
}
