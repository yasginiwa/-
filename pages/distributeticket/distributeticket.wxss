/* pages/distributeticket/distributeticket.wxss */

.nocontent
{
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
  position: relative;
}

.nocontent image {
  position: absolute;
  width: 150rpx;
  height: 150rpx;
  top: 400rpx;
}

.nocontent text {
  position: absolute;
  color: #bfbfbf;
  font-size: 28rpx;
  top: 560rpx;
}

.header {
  display: flex;
  flex-flow: row nowrap;
  background-color: #efefef;
  align-items: center;
  height: 60rpx;
}

.header image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.header text {
  margin-top: 2rpx;
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #888;
}

.cell {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  width: 100%;
  height: 120rpx;
  background-color: white;
  border-bottom: solid #eee 1rpx;
}

.cell .icon {
  width: 80rpx;
  height: 80rpx;
  margin-left: 10rpx;
}

.cell .content {
  margin-left: 10rpx;
  font-size: 28rpx;
  margin-bottom: 5rpx;
}

.cell .detail {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  margin-left: 10rpx;
  color: #aaa;
  margin-top: 7rpx;
}

.cell .detail .noimg
{
  width: 24rpx;
  height: 24rpx;
}

.cell .detail .no {
  font-size: 24rpx;
  margin-left: 10rpx;
}

.cell .detail .priceimg
{
  width: 24rpx;
  height: 24rpx;
  margin-left: 20rpx;
}

.cell .detail .price {
  margin-left: 10rpx;
  font-size: 24rpx;
}

.cell .status {
  width: 60rpx;
  height: 24rpx;
  margin-left: 20rpx;
}

.cell .share {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 140rpx;
  height: 100rpx;
  background-color: white;
  position: absolute;
  right: 45rpx;
}

.cell button::after {
  border: none;
}

.cell .shareimage {
  width: 80rpx;
  height: 80rpx;
}

.cell .arrow {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
}
